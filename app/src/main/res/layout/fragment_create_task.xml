<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SCREEN"
    android:id="@+id/createTaskFrag"
    tools:context=".TasksPage.FragmentCreateTask">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingsToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       style="@style/TOOLBAR">

        <TextView
            android:id="@+id/textSettingsToolBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TEXT"
            android:text="@string/CONST_NAME_ADD_TASK"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>



    <EditText
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="80dp"
        android:inputType="text"
        android:maxLength="40"
        android:scrollbars="vertical">

    </EditText>

    <EditText
        android:id="@+id/setDate"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginVertical="155dp"
        android:inputType="date">
    </EditText>


    <EditText
        android:id="@+id/setTime"
        android:layout_width="357dp"
        android:layout_height="50dp"
        android:layout_marginVertical="205dp"
        android:inputType="time">

    </EditText>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="130dp"
        android:layout_marginLeft="8dp"
        style="@style/TEXT"
        android:text="@string/CONST_NAME_DATE_AND_TIME"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="55dp"
        android:layout_marginLeft="8dp"
        style="@style/TEXT"
        android:text="@string/CONST_NAME_HEADER"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="280dp"
        android:inputType="textMultiLine"
        android:maxHeight="200dp"
        android:maxLength="500"
        android:scrollbars="vertical">

    </EditText>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="256dp"
        android:layout_marginLeft="8dp"
        style="@style/TEXT"
        android:text="@string/CONST_NAME_DESCRIPTION"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonConfirmTask"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="360dp"
        android:background="@drawable/baseline_check_24">
    </Button>

    <Button
        android:id="@+id/buttonSetTaskTime"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="215dp"
        android:layout_marginLeft="365dp"
        android:background="@drawable/baseline_access_time_24" />

    <Button
        android:id="@+id/buttonSetTaskDate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="160dp"
        android:layout_marginLeft="365dp"
        android:background="@drawable/baseline_calendar_month_24" />

    <Button
        android:id="@+id/taskBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/baseline_arrow_back_24"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="480dp"
        android:layout_marginLeft="8dp"
        style="@style/TEXT"
        android:text="@string/CONST_NAME_REPEAT"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/repeatMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="500dp"
        style="@style/TEXT"
        android:layout_marginLeft="15dp"
        android:entries="@array/repeatMenu" />

</RelativeLayout>